;; variables
local gcd

;; implement
function gcd(a,b)
  assert(isint(a))
  assert(isint(b))

  a = math.abs(a)
  b = math.abs(b)
  local t
  while b ~= 0 do
    t = b
    b = math.fmod(a,b)
    a = t
  end
	return a
end

